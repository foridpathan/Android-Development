<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical"
    android:weightSum="3"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_equation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="24dp"
            android:padding="5dp"
            android:gravity="end" />


        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="textEnd"
            android:textSize="24dp"
            android:padding="5dp"
            android:gravity="end"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4"
            android:paddingBottom="5dp">

            <Button
                android:id="@+id/btn_clc"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="AC"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_del"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="DEL"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_memory"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="+/-"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />


            <Button
                android:id="@+id/btn_mod"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="%"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="4">


            <Button
                android:id="@+id/btn_9"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="9"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_8"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="8"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_7"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="7"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />

            <Button
                android:id="@+id/btn_division"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:text="/"
                android:textColor="@color/colorWhite"
                android:textSize="24dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="4">
            <Button
                android:id="@+id/btn_6"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="6"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/btn_5"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="5"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/btn_4"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="4"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"/>

            <Button
                android:id="@+id/btn_multiplication"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="x"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:textSize="24dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="5dp"
            android:weightSum="4">
            <Button
                android:id="@+id/btn_3"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                android:text="3"
                />
            <Button
                android:id="@+id/btn_2"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="2"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                />
            <Button
                android:id="@+id/btn_1"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="1"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                />
            <Button
                android:id="@+id/btn_minus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="-"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="4">
            <Button
                android:id="@+id/btn_dot"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="."
                android:textSize="24dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/btn_zero"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="0"
                android:textSize="24dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/btn_equal"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="="
                android:textSize="24dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"/>

            <Button
                android:id="@+id/btn_plus"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="+"
                android:textSize="24dp"
                android:background="@color/colorPrimary"
                android:textColor="@color/colorWhite"/>
        </LinearLayout>
    </LinearLayout>




</LinearLayout>